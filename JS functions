<!-- JS -->
<script>

// function
function myFunction() {
	let	paragraphTag = document.getElementById('paragraph');
	paragraphTag.innerHTML = "Hellow function";
}

// function coll
myFunction();



// ----------------------------------------------------------


// return a function
function myFunction1(p1, p2) {
	return p1 + p2;
}

// function call
document.getElementById('paragraph').innerHTML = myFunction1(2, 4);


</script>




