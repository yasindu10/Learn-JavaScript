<div>
 
  <h3>javascript</h3>

  <p>javascript is populer programming language for web development</p>

</div>

<script>

// id target
let idTarget = document.getElementById('demo');
idTarget.innerHTML = "Hellow javascript";

// class target
let classtarget = document.getElementsByClassName('tows');
classtarget[0].style.backgroundColor = "red";
classtarget[1].style.backgroundColor = "red";
classtarget[2].style.backgroundColor = "red";

// tag target
let btn = document.getElementsByTagName('button');
btn[0].style.color = "green";

// all target | id, class, tag
let alls = document.querySelectorAll('div')
alls[0].style.color = "red";


</script>



