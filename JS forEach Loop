<body>


<p id="demo"></p>	

<script>
// Array
let friends = ["Malindu","Rakindu","Binula","Senul"];

// variable
let txt = "";

// forEach
friends.forEach(myFunction);

document.getElementById('demo').innerHTML = txt;

function myFunction(value, index, array) {
	txt += value + "</br>";
}

</script>

</body>
